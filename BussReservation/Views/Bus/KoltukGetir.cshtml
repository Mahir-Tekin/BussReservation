@model List<Koltuk>


<div class="card w-50 mx-auto mt-3 text-center">
    <div class="card-header">
        <h5 class="card-title">Koltuk Seçiniz</h5>
        <h5 class="text-success">- @TempData["durum"] -</h5>
    </div>
    <div class="card-body bg-gradient">
        @if (ViewBag.duzen=="2+1")
        {
            for(int i = 0; i < Model.Count; i = i + 3)
