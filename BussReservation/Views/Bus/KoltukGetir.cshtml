                            <a asp-controller="bus" asp-action="KoltukKaydet" asp-route-id="@Model[i].Id" style="position:absolute; left:0; top:0;" class="text-success"><i style="font-size:7em;" class="bi bi-person-circle"></i></a>
                        }
                        else
                        {
                            <a disabled style="position:absolute; left:0; top:0;" class="text-danger"><i style="font-size:7em;" class="bi bi-person-circle"></i></a>
                        }
                    </div>
